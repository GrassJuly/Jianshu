<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">
    <TextView
        android:id="@+id/article_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="自动化测试的成本高效果差"
        android:inputType="text"
        android:textSize="18sp"
        android:singleLine="true"
        android:textColor="@color/f_black"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/article_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:maxLines="5"
        android:textColor="@color/f_text_gray"
        tools:text="自动化测试的成本高，效果差，是一个相对的，而针对某些具体项目，是必须要接入自动化测试的。首先说一些什么的时候会需要自动化测试，明白这一点"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/article_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/f_text_gray"
            tools:text="软件测试_乐博"/>
        <TextView
            android:id="@+id/article_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/f_text_gray"
            android:textSize="12sp"
            tools:text="4.9k 阅读"
            />
        <TextView
            android:id="@+id/article_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/f_text_gray"
            android:textSize="12sp"
            tools:text="33 评论"/>
        <TextView
            android:id="@+id/article_awesome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/f_text_gray"
            android:textSize="12sp"
            tools:text="74 赞"/>
        <TextView
            android:id="@+id/article_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            tools:text="2018.08.20"
            android:textColor="@color/f_text_gray"
            android:textSize="12sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/f_line_gray"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
</LinearLayout>